<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.preference.PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.preference.PreferenceCategory>
            <android.support.v7.preference.SwitchPreferenceCompat
                android:key="theme_mode"
                android:title="@string/mode"
                android:summary="Switch dark mode on or off"
                android:defaultValue="false" />


            <Preference
                android:key="password_reset"
                android:summary="Set a new password"
                android:title="@string/changepw"/>

            <Preference
                android:key="admin_report_bug"
                android:summary="Report Bugs"
                android:title="@string/report_bugs"/>


        </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>
