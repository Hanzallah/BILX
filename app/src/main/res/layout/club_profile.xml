<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/club_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/club_imageView"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:adjustViewBounds="true"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:padding="0dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:scaleType="fitCenter" />


    <EditText
        android:id="@+id/clubDescription_text"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="246dp"
        android:ems="10"
        android:hint="Enter Club Description"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="true" />

    <TextView
        android:id="@+id/clubDescriptionHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Enter Your Club Description"
        android:textSize="15dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignEnd="@+id/clubDescription_text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:clickable="true"
        app:backgroundTint="?android:attr/colorPrimary"
        app:elevation="10dp"
        app:fabSize="normal"
        app:rippleColor="@android:color/holo_blue_bright"
        app:srcCompat="@android:drawable/ic_menu_send" />


</RelativeLayout>